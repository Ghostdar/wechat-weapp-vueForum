/**app.wxss**/
@import "/component/weui/weui.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.top{
  padding:10rpx;
  margin-right:10rpx;
  border-radius:10rpx;
  background:#369219;

  color:#fff;
  font-size:28rpx;
}
/* 回复公共样式 */
.reply .item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  padding:16rpx;
  border-bottom:.5rpx solid #f0f0f0;
  font-size:28rpx;
}
.reply .item image{
  width:60rpx;
  height:60rpx;
  margin-right:10rpx;
  border-radius:30rpx;
}
.reply .item .author{
  width:100%;
  display: flex;
  margin-bottom:10rpx;
  justify-content: flex-start;
  align-items: center;
}
.reply .item .author .author-name{
  color:#666
}
.reply .item .reply-time{
  margin-left:20rpx;
  font-size:26rpx;
  color:#08c;
}
.reply .item .reply-cot{
  width:100%;
  font-size:26rpx;
}